{
    "compilerOptions": {
        "target": "es2015",
        "module": "es2015",
        "jsx": "preserve",
        "sourceMap": true,
        "outDir": "ts-build",
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node"
    },
    "exclude": [
        "node_modules"
    ]
}
